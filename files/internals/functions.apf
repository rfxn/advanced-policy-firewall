eout() {
arg=$1
        if [ ! "$arg" == "" ]; then
                echo "$(date +"%b %d %H:%M:%S") $(hostname -s) $APPN($$): $arg" >> $LOG_APF
		if [ "$SET_VERBOSE" == "1" ]; then
	                echo "$APPN($$): $arg"
		fi
        fi
}

devm() {
# Is dev mode on or off ?
TMP_CJ="$INSTALL_PATH/.cj"
CRON="/etc/crontab"
if [ "$DEVEL_MODE" == "1" ]; then
 DEVEL_ON=1
 if [ ! "$SET_VERBOSE" == "1" ]; then
	eout "{glob} !!DEVELOPMENT MODE ENABLED!! - firewall will flush every 5 minutes."
	echo "!!DEVELOPMENT MODE ENABLED!! - firewall will flush every 5 minutes."
 fi
APF_CJ=`cat $CRON | grep -w /etc/init.d/apf`
        if [ "$APF_CJ" == "" ]; then
                cp -f $CRON $CRON.bk
                cat > $TMP_CJ <<EOF

*/5 * * * * root /etc/init.d/apf stop >> /dev/null 2>&1
EOF
                cat $TMP_CJ >> $CRON
                rm -f $TMP_CJ
        fi
elif [ "$DEVEL_MODE" == "0" ]; then
APF_CJ=`cat $CRON | grep -w /etc/init.d/apf`
        if [ ! "$APF_CJ" == "" ]; then
                cat $CRON | grep -vw "/etc/init.d/apf" > $CRON.tmp
                cp -f $CRON $CRON.bk
                mv $CRON.tmp $CRON
                chmod 644 $CRON
        fi
fi
}

ml() {
