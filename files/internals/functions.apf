	MEXT="o"
elif [ "$KREL" == "2.6" ]; then
	MEXT="ko"
elif [[ "$KREL" =~ "3." ]]; then
	MEXT="ko"
elif [ ! "$KREL" == "2.4" ] && [ ! "$KREL" == "2.6" ] && [[ ! "$KREL" =~ "3." ]]; then
	if [ ! "$SET_VERBOSE" == "1" ]; then
        	echo "kernel version not compatible or netfilter support missing, aborting."
	fi
